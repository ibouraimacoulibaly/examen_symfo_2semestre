{% block body %}
    <h5 id="h5">Articles list</h5>
   
<div id="table">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Dateparution</th>
                <th>Description</th>
                <th>Auteur</th>
                <th>Etatpublication</th>
                <th>Categorie</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.titre }}</td>
                <td>{% if article.dateParution %}{{ article.dateParution|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.auteur }}</td>
                <td>{{ article.etatPublication }}</td>
                <td>{{ article.categorie }}</td>
                <td>   <img src="{{ asset ('imag/' ~ article.image) }}" width="50" height="50"> </td>
                <td>
                   
                            <a class="btn btn-success" href="{{ path('article_show', { 'id': article.id }) }}">show</a>
                       
                            <a class="btn btn-primary" href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                        
                   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    
            <a class="btn btn-default" href="{{ path('article_new') }}">Create a new article</a>
   
{% endblock %}
